<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminReportMain">

    <Toolbar
        android:id="@+id/admin_tool_rp_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_24">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
    </Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/rp_main_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:tabIndicatorColor="@color/logo_red"
        app:tabSelectedTextColor="@color/logo_red" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/rp_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
